# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/personal_finance_agent
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/personal_finance_agent_test

# Security and Authentication
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (optional)
OPENAI_API_KEY=your-openai-api-key-here

# Google Services (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# OCR Service Configuration
OCR_SERVICE=tesseract
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# LLM Service Configuration
LLM_SERVICE=local
LOCAL_MODEL_PATH=./models/mistral-7b-instruct

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE_MB=10

# File Storage
UPLOAD_DIRECTORY=./uploads
MODEL_DIRECTORY=./models

# Scheduling
ENABLE_SCHEDULER=True
BUDGET_RECALC_HOUR=6
MODEL_RETRAIN_DAYS=7

# UI Configuration
STREAMLIT_SERVER_PORT=8501
API_SERVER_PORT=8000
